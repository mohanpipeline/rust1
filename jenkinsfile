pipeline { 
    agent any
    environment {
        // Define environment variables, including paths
        CARGO_HOME = '/var/lib/jenkins/.cargo'
        PATH = "${CARGO_HOME}/bin:${env.PATH}"
    }
    stages { 
        stage("git clone stage") { 
            steps { 
                git branch: 'main', url: 'https://github.com/mohansourcecode/rust1.git'
            }
        }
        
        stage("print all the files") {
            steps {
                sh 'ls -l'
            }
        }
        
        stage("cargo build") {
            steps {
               sh '''
                    cargo build
                '''
            }
        }
    }
}

        
